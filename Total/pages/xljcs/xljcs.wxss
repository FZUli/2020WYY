.number{
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  top:-30px;
  left: 130px;
  background-color:white;
  border-radius: 50%;
  width: 120rpx;
  height: 120rpx;
  border-color: rgb(114, 183, 248);
  color: rgb(114, 183, 248);
  font-size: large;

}


